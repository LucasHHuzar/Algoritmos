#include <stdio.h>
#include <string.h>

int main(){
	
	char str[51], caracter, i;
	int quant = 0;
	
	printf("Escreva uma frase: ");
	scanf(" %50[^\n]", str);
	
	for(i = 0; str[i] != '\0'; i++){
		if(str[i] == 'a' || str[i] == 'e' || str[i] == 'i' || str[i] == 'o' || str[i] == 'u'){
			quant++;
		}
	}
	
	printf("As vogais aparece(m) %d vez(es) na frase", quant);
	
	return 0;
}
